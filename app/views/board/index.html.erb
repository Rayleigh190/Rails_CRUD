<% @posts.each do |post| %>
<div class="container">
    <hr>
    <h4>ID: <%= post.id%></h4>
    <p>제목: <%= post.title%></p>
    <p>내용: <%= post.content%></p>
    <!-- <a href="/edit?id=<%= post.id%>">수정하기</a>
    <a href="/delete?id=<%= post.id%>">삭제하기</a> -->
    <button type="button" class="btn btn-primary btn-sm" onclick = "location.href = '/edit?id=<%= post.id%>' ">수정하기</button>
    <button type="button" class="btn btn-danger btn-sm" onclick = "location.href = '/delete?id=<%= post.id%>' ">삭제하기</button>
<hr>
</div>

<% end %>